<mvc:View controllerName="sap.ui.solaris.controller.Startpage"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns:microchart="sap.suite.ui.microchart"  xmlns:html="http://www.w3.org/1999/xhtml">
	<Shell>
	<App>
			<Page showHeader="false" backgroundDesign="Info" >
				<Panel>	
				 <mvc:XMLView viewName="sap.ui.solaris.view.Toolbar" /> 
				
				<FlexBox  id="sdadas" wrap="Wrap" width="auto" height="auto" justifyContent="Center" 
						backgroundDesign="Translucent">

						<layout:VerticalLayout width="auto" class="sapUiResponsiveMargin" allowWrapping="true">
							<FlexBox displayInline="true"  justifyContent="Center" width="auto" height="auto" class="sapUiNoMarginBottom" >
								<layout:HorizontalLayout
									class="sapUiTinyMarginBegin" allowWrapping="true">
							
	                           		<GenericTile class="sapUiTinyMarginEnd sapUiTinyMarginTop" header="{i18n>angajatiTitle}"
										subheader="{i18n>angajatiSubtitle}" press="onNavToAngajati">
										<tileContent>
											<TileContent>
												<content>
													<ImageContent src="sap-icon://group" />
												</content>
											</TileContent>
										</tileContent>
									</GenericTile>
									
									<GenericTile class="sapUiTinyMarginEnd sapUiTinyMarginTop" header="{i18n>proiecteTitle}"
										subheader="{i18n>proiecteSubtitle}" press="onNavToProiecte">
										<tileContent>
											<TileContent>
												<content>
													<ImageContent src="sap-icon://overview-chart" />
												</content>
											</TileContent>
										</tileContent>
									</GenericTile>
									
									<GenericTile class="sapUiTinyMarginEnd sapUiTinyMarginTop" header="{i18n>AsignareProiecteTitle}"
										subheader="{i18n>AsignareProiecteSubtitle}" press="onNavToAsignareProiecte">
										<tileContent>
											<TileContent>
												<content>
													<ImageContent src="sap-icon://idea-wall" />
												</content>
											</TileContent>
										</tileContent>
									</GenericTile>
									
									
									<GenericTile class="sapUiTinyMarginEnd sapUiTinyMarginTop" header="{i18n>RaportGeneralTitle}"
										subheader="{i18n>RaportGeneralSubtitle}" press="onNavToRaportGeneral">
										<tileContent>
											<TileContent>
												<content>
													<ImageContent src="sap-icon://order-status" />
												</content>
											</TileContent>
										</tileContent>
									</GenericTile>
									
									<GenericTile class="sapUiTinyMarginEnd sapUiTinyMarginTop" header="{i18n>RaportIndividualTitle}"
										subheader="{i18n>RaportIndividualSubtitle}" press="onNavToRapoarteIndividuale">
										<tileContent>
											<TileContent>
												<content>
													<ImageContent src="sap-icon://calendar" />
												</content>
											</TileContent>
										</tileContent>
									</GenericTile>
									
								</layout:HorizontalLayout>
							</FlexBox>

						</layout:VerticalLayout>
					</FlexBox>
					<FlexBox width="auto" height="15rem" backgroundDesign="Translucent" class=""/>
					    
				</Panel>
				<FlexBox width="auto" height="auto" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
					justifyContent="Start" backgroundDesign="Translucent" >
					<layout:HorizontalLayout allowWrapping="true">
						<GenericTile size="auto" header="{i18n>startpageAboutSiemens}"
							mode="LineMode" press="externalLinkAboutSiemens" />
						
					</layout:HorizontalLayout>
				</FlexBox>

			</Page>
</App>
</Shell>
</mvc:View>